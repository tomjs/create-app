{
  "name": "{{pkg.name}}",
  "version": "0.0.0",
  "description": "vscode extension template",
  "license": "MIT",
  "engines": {
    "node": ">=14",
    "vscode": "^1.56.0"
  },
  "main": "dist/index.js",
  "activationEvents": [
    "onCommand:hello-world.showHelloWorld"
  ],
  "contributes": {
    "commands": [
      {
        "command": "hello-world.showHelloWorld",
        "title": "Hello World: Show"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+{{git.url}}.git"
  },
  "bugs": {
    "url": "git+{{git.url}}/issues"
  },
  "homepage": "{{git.url}}/blob/main/README.md",
  "icon": "images/icon.png",
  "vsce": {
    "dependencies": false,
    "yarn": false
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup --minify",
    "lint": "run-s lint:eslint lint:prettier",
    "lint:eslint": "eslint \"{src,scripts}/**/*.{js,cjs,ts}\" *.{js,cjs,ts} --fix --cache",
    "lint:prettier": "prettier --write .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@tomjs/commitlint": "^2.1.2",
    "@tomjs/eslint": "^1.2.2",
    "@tomjs/prettier": "^1.1.1",
    "@tomjs/tsconfig": "^1.3.0",
    "@types/node": "^18.19.6",
    "@types/vscode": "^1.85.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.2",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "~5.3.3"
  }
}
