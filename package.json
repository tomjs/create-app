{
  "name": "@tomjs/create-app",
  "type": "module",
  "version": "1.7.0",
  "packageManager": "pnpm@10.11.0",
  "description": "create tomjs web app",
  "author": {
    "name": "Tom Gao",
    "email": "tom@tomgao.cc"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomjs/create-app.git"
  },
  "keywords": [
    "tomjs",
    "front-end",
    "frontend",
    "back-end",
    "backend",
    "create",
    "create-app",
    "app",
    "template",
    "vite",
    "vue",
    "react",
    "electron",
    "vscode",
    "web",
    "node"
  ],
  "bin": {
    "create-app": "dist/index.js"
  },
  "files": [
    "dist",
    "templates/**"
  ],
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "dev": "tsdown --watch",
    "debug": "tsx -r dotenv/config src/index.ts",
    "build": "tsdown --minify",
    "lint": "run-s lint:stylelint lint:eslint",
    "lint:eslint": "eslint --fix",
    "lint:stylelint": "stylelint \"templates/**/*.{css,scss,less,vue,html}\" --fix --cache",
    "prepare": "simple-git-hooks",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@tomjs/logger": "^1.4.0",
    "@tomjs/node": "^2.2.3",
    "chalk": "^5.4.1",
    "dayjs": "^1.11.13",
    "execa": "^9.5.3",
    "inquirer": "^12.6.1",
    "lodash-es": "^4.17.21",
    "meow": "^13.2.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.1",
    "@commitlint/cli": "^19.8.1",
    "@tomjs/commitlint": "^4.0.0",
    "@tomjs/eslint": "^5.0.0",
    "@tomjs/stylelint": "^6.0.0",
    "@tomjs/tsconfig": "^2.0.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^18.19.100",
    "@types/prompts": "^2.4.9",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "eslint": "^9.27.0",
    "lint-staged": "^15.5.2",
    "npm-run-all": "^4.1.5",
    "simple-git-hooks": "^2.13.0",
    "stylelint": "^16.19.1",
    "tsdown": "^0.11.9",
    "tsx": "^4.19.4",
    "type-fest": "^4.41.0",
    "typescript": "~5.8.3"
  }
}
